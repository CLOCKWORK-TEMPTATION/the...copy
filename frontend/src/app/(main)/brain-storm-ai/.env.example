# Brain Storm AI - Environment Variables
# نسخ هذا الملف إلى .env.local وملء القيم

# ========================================
# Gemini API Configuration (مطلوب)
# ========================================
# احصل على API Key من: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# ========================================
# Brain Storm Configuration (اختياري)
# ========================================

# الحد الأقصى لعدد الوكلاء الذين يمكن تشغيلهم في وقت واحد
# Default: 28
BRAINSTORM_MAX_AGENTS=28

# الحد الزمني لكل عملية بالميلي ثانية (5 دقائق افتراضياً)
# Default: 300000 (5 minutes)
BRAINSTORM_TIMEOUT=300000

# مستوى التفصيل في السجلات
# Options: "error" | "warn" | "info" | "debug"
# Default: "info"
BRAINSTORM_LOG_LEVEL=info

# تفعيل وضع Debug للوكلاء
# Default: false
BRAINSTORM_DEBUG_MODE=false

# ========================================
# Gemini Model Configuration (اختياري)
# ========================================

# النموذج المستخدم للوكلاء
# Options: "gemini-pro" | "gemini-1.5-pro" | "gemini-1.5-flash"
# Default: "gemini-1.5-flash"
GEMINI_MODEL=gemini-1.5-flash

# درجة حرارة التوليد (0.0 - 1.0)
# قيم أعلى = إبداع أكثر، قيم أقل = تركيز أكثر
# Default: 0.7
GEMINI_TEMPERATURE=0.7

# الحد الأقصى للرموز المولدة
# Default: 2048
GEMINI_MAX_TOKENS=2048

# Top-P للتحكم في التنوع
# Default: 0.95
GEMINI_TOP_P=0.95

# Top-K للتحكم في اختيار الرموز
# Default: 40
GEMINI_TOP_K=40

# ========================================
# Multi-Agent Debate Configuration (اختياري)
# ========================================

# عدد جولات النقاش بين الوكلاء
# Default: 3
DEBATE_ROUNDS=3

# الحد الأدنى لمستوى الثقة المطلوب للقرار
# Default: 0.7
DEBATE_CONFIDENCE_THRESHOLD=0.7

# تفعيل نظام Uncertainty Quantification
# Default: true
DEBATE_ENABLE_UNCERTAINTY=true

# ========================================
# File Upload Configuration (اختياري)
# ========================================

# الحد الأقصى لحجم الملف بالميجابايت
# Default: 10
MAX_FILE_SIZE_MB=10

# الصيغ المسموح بها (مفصولة بفواصل)
# Default: "pdf,docx,txt"
ALLOWED_FILE_TYPES=pdf,docx,txt

# ========================================
# Performance & Caching (اختياري)
# ========================================

# تفعيل التخزين المؤقت للنتائج
# Default: true
ENABLE_CACHING=true

# مدة التخزين المؤقت بالثواني
# Default: 3600 (1 hour)
CACHE_DURATION=3600

# ========================================
# Rate Limiting (اختياري)
# ========================================

# عدد الطلبات المسموح بها في الدقيقة
# Default: 10
RATE_LIMIT_PER_MINUTE=10

# عدد الجلسات المتزامنة للمستخدم الواحد
# Default: 3
MAX_CONCURRENT_SESSIONS=3

# ========================================
# Development Only (للتطوير فقط)
# ========================================

# تفعيل الوكلاء الوهمية للاختبار (بدون API)
# Default: false
USE_MOCK_AGENTS=false

# تفعيل وضع Verbose للسجلات المفصلة
# Default: false
VERBOSE_LOGGING=false
