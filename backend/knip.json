{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/server.ts",
    "src/index.ts"
  ],
  "project": [
    "src/**/*.ts"
  ],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.config.{js,ts}",
    "**/.vscode/**",
    "**/coverage/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ignoreDependencies": [
    "@types/*",
    "typescript"
  ],
  "rules": {
    "dependencies": true,
    "unlisted": true,
    "unusedExports": true,
    "unusedFiles": true,
    "duplicates": true
  }
}
